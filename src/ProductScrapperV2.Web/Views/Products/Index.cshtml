@model IReadOnlyCollection<ProductScrapperV2.Domain.Entities.Product>

<div class="row g-4">
    <div class="col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">ثبت محصول جدید</h5>
                <form asp-action="Create" method="post" class="mt-3">
                    <div class="mb-3">
                        <label class="form-label">نام محصول</label>
                        <input class="form-control" name="Name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">کد کالا</label>
                        <input class="form-control" name="Sku" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">قیمت ما</label>
                        <input class="form-control" name="OwnPrice" type="number" step="0.01" required />
                    </div>
                    <button class="btn btn-primary" type="submit">ذخیره</button>
                </form>
            </div>
        </div>
        <div class="card shadow-sm mt-4">
            <div class="card-body">
                <h5 class="card-title">جستجوی سریع محصول</h5>
                <form asp-action="QuickSearch" method="post" class="mt-3">
                    <div class="mb-3">
                        <label class="form-label">نام محصول</label>
                        <input class="form-control" name="Name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">قیمت ما</label>
                        <input class="form-control" name="OwnPrice" type="number" step="0.01" required />
                    </div>
                    <button class="btn btn-outline-primary" type="submit">شروع مقایسه سریع</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-7">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">لیست محصولات</h5>
                    <form asp-action="TriggerAll" method="post">
                        <button class="btn btn-sm btn-success" type="submit">اجرای مقایسه برای همه</button>
                    </form>
                </div>
                <table class="table table-striped mt-3">
                    <thead>
                        <tr>
                            <th>نام</th>
                            <th>کد</th>
                            <th>قیمت ما</th>
                            <th>تاریخ ثبت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Sku</td>
                                <td>@product.OwnPrice.ToString("N0")</td>
                                <td>@product.CreatedAt.LocalDateTime.ToString("yyyy/MM/dd")</td>
                                <td>
                                    <form asp-action="TriggerScrape" method="post">
                                        <input type="hidden" name="id" value="@product.Id" />
                                        <button class="btn btn-sm btn-outline-primary" type="submit">اجرای مقایسه</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
