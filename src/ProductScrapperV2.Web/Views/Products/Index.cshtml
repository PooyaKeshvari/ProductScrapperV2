@model IReadOnlyCollection<ProductScrapperV2.Domain.Entities.Product>

<div class="row g-4">
    <div class="col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">ثبت محصول جدید</h5>
                <form asp-action="Create" method="post" class="mt-3">
                    <div class="mb-3">
                        <label class="form-label">نام محصول</label>
                        <input class="form-control" name="Name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">کد کالا</label>
                        <input class="form-control" name="Sku" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">قیمت ما</label>
                        <input class="form-control" name="OwnPrice" type="number" step="0.01" required />
                    </div>
                    <button class="btn btn-primary" type="submit">ذخیره</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-7">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">لیست محصولات</h5>
                <table class="table table-striped mt-3">
                    <thead>
                        <tr>
                            <th>نام</th>
                            <th>کد</th>
                            <th>قیمت ما</th>
                            <th>تاریخ ثبت</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Sku</td>
                                <td>@product.OwnPrice.ToString("N0")</td>
                                <td>@product.CreatedAt.LocalDateTime.ToString("yyyy/MM/dd")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
